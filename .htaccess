<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /SalaryApp/
  
  # 1. ป้องกันไม่ให้มีการ Rewrite ในโฟลเดอร์ API
  # ถ้าร้องขอเข้าโฟลเดอร์ src/API/ ให้หยุดและใช้กฎ .htaccess ของโฟลเดอร์นั้นแทน
  RewriteRule ^src/API/ - [L]

  # 2. ถ้าร้องขอ index.html ให้ผ่านไปได้
  RewriteRule ^index\.html$ - [L]
  
  # 3. ถ้าร้องขอไม่ใช่ไฟล์หรือโฟลเดอร์จริง ให้ Rewrite ไปที่ index.html
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . /SalaryApp/index.html [L]
</IfModule>